{
    "compilerOptions": {
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "checkJs": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "target": "ESNext",
      "module": "ES6",
      "typeRoots": [
        "./src/global.d.ts",
        "node_modules/@types",
      ],
      "types": ["jest"],
      "moduleResolution": "node",
      "experimentalDecorators": true
    },
    "files": ["./src/index.ts"],
    "include": ["src/**/**.ts"],
    "exclude": ["node_modules"]
  }