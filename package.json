{
  "name": "@octocloud/core",
  "version": "1.0.67",
  "license": "ISC",
  "author": "",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:dry": "tsc --noEmit",
    "build:dry:ci": "tsc --noEmit",
    "check": "npm run build:dry && npm run format && npm run lint",
    "fix": "biome check --write .",
    "format": "biome format",
    "format:fix": "biome format --write .",
    "lint": "biome lint",
    "lint:fix": "biome lint --write .",
    "test": "TZ=Europe/Prague VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts",
    "test:coverage": "TZ=Europe/Prague VITE_CJS_IGNORE_WARNING=true vitest run --config ./vitest.config.ts --coverage",
    "dev": "npm run build -- --watch src",
    "lefthook": "lefthook install",
    "audit": "audit-ci --config ./audit-ci.json",
    "prepare": "npm run build"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@date-fns/tz": "1.2.0",
    "@date-fns/utc": "2.1.0",
    "@dinero.js/currencies": "2.0.0-alpha.8",
    "@octocloud/types": "1.5.34",
    "date-fns": "4.1.0",
    "dinero.js": "2.0.0-alpha.14",
    "libphonenumber-js": "1.10.53",
    "tsyringe": "4.8.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@octocloud/generators": "1.0.11",
    "@types/node": "^22.9.0",
    "@types/uuid": "9.0.0",
    "@vitest/coverage-v8": "2.1.3",
    "audit-ci": "7.1.0",
    "lefthook": "1.10.10",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "vite": "5.4.14",
    "vitest": "2.1.3",
    "vitest-mock-extended": "2.0.2"
  }
}
